<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/attraction_photo"
                android:layout_width="@dimen/list_item_width"
                android:layout_height="@dimen/list_item_height"/>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/AttractionHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attraction_name"
                tools:text="Attraction Name"/>

                <LinearLayout
                    style="@style/AttractionStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/address_pointer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/AttractionStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attraction_address"
                    tools:text="Attraction address" />
                </LinearLayout>

                <TextView
                    style="@style/AttractionStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attraction_URL"
                    tools:text="Attraction web address"
                    android:paddingLeft="56dp"/>


            </LinearLayout>

        </LinearLayout>

</LinearLayout>